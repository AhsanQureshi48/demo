<div class="three_column_wrp">
  <div class="page-width">
    <div class="three_inn_column">
      {% for block in section.blocks %}
        <div class="three-column-img-flex">
          <div class="three-col-left">
            <div class="column-lft-inn">
              {% if block.settings.column_image != blank %}
                <div class="big-img">
                  <img src="{{block.settings.column_image | img_url: 'master' }}" alt="">
                </div>
              {% endif %}
            </div>
          </div>
          <div class="three-col-middle">
            {% if block.settings.title != blank %}
              <h2>
                {{ block.settings.title }}
              </h2>
            {% endif %}
            {% if block.settings.content != blank %}
              <p>
                {{ block.settings.content }}
              </p>
            {% endif %}
          </div>
          <div class="three-col-right">
            <div class="column-rg-inn">
              <h2>
                {{ block.settings.title }}
              </h2>
              {% if block.settings.sec_content != blank %}
                <p>
                  {{ block.settings.sec_content }}
                </p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Three Column",
    "class": "three_column",
    "settings": [],
    "blocks": [
  {
    "name": "Block Content",
    "type": "blockContent",
    "settings": [
      {
        "type": "image_picker",
        "id": "column_image",
        "label": "Column Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Block Title"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Block Content"
      },
      {
        "type": "textarea",
        "id": "sec_content",
        "label": "Block Content"
      }

    ]
  }
],
    "presets": [
      {
        "name": "Three Column",
        "category": "Custom"
      }
    ]
  }
{% endschema %}
{% stylesheet %}
{% endstylesheet %}
