<div class="two_column_img_wrp">
  <div class="page-width">
    <div class="two_column_inn">
      {% for block in section.blocks %}
        <div class="two-column-img-flex">
          <div class="column-left">
            <div class="column-lft-inn">
              {% if block.settings.title != blank %}
                <h2>
                  {{ block.settings.title }}
                </h2>
              {% endif %}
              {% if block.settings.content != blank %}
                <p>
                  {{ block.settings.content }}
                </p>
              {% endif %}
            </div>
          </div>
          <div class="column-right">
            <div class="column-rg-inn">
              {% if block.settings.big_image != blank %}
                <div class="big-img">
                  <img src="{{block.settings.big_image | img_url: 'master' }}" alt="">
                </div>
              {% endif %}
              {% if block.settings.small_image != blank %}
                <div class="small-img">
                  <img src="{{block.settings.small_image | img_url: 'master' }}" alt="">
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
