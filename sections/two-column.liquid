<div class="two_column_wrp {{ section.settings.add_class }}">
  <div class="page-width">
    <div class="two_inn_column">
      {% for block in section.blocks %}
        {%- capture flipped -%}
    {%- if block.settings.flipped_area == 'flipped' -%}flipped{%- endif -%}
  {%- endcapture -%}
        {%- capture width -%}
          {%- if block.settings.flex_basis == 'none' -%}none{%- endif -%}
          {%- if block.settings.flex_basis == 'half_column' -%}half_column{%- endif -%}
          {%- if block.settings.flex_basis == 'one_third' -%}one_third{%- endif -%}
          {%- if block.settings.flex_basis == 'one_fourth' -%}one_fourth{%- endif -%}
  {%- endcapture -%}
        <div class="two-column-img-flex {{ flipped }} {{ width }}">
          <div class="col-left">
            <div class="column-lft-inn">
              {% if block.settings.title != blank %}
                <h2>
                  {{ block.settings.title }}
                </h2>
              {% endif %}
              {% if block.settings.content != blank %}
                <p>
                  {{ block.settings.content }}
                </p>
              {% endif %}
              {% if block.settings.sub_title != blank %}
                <div class="new_block_col">
                  <p class="eighteen">
                    {{ block.settings.sub_title }}
                  </p>
                  <p>
                    {{ block.settings.sub_content }}
                  </p>
                </div>
              {% endif %}
              {% if block.settings.sub_sec_title != blank %}
                <div class="new_block_col">
                  <p class="eighteen">
                    {{ block.settings.sub_sec_title }}
                  </p>
                  <p>
                    {{ block.settings.sub_sec_content }}
                  </p>
                </div>
              {% endif %}
              {% if block.settings.sub_third_title != blank %}
                <div class="last_block_col">
                  <p class="eighteen">
                    {{ block.settings.sub_third_title }}
                  </p>
                  <p>
                    {{ block.settings.sub_third_content }}
                  </p>
                </div>
              {% endif %}
            </div>
          </div>
          <div class="col-right">
            <div class="column-rg-inn">
              {% if block.settings.column_image != blank %}
                <div class="big-img">
                  <img src="{{block.settings.column_image | img_url: 'master' }}" alt="">
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Two Column",
    "class": "two_column",
    "settings": [
      {
        "type": "text",
        "id": "add_class",
        "label": "Custom Class"
      }
    ],
    "blocks": [
  {
    "name": "Block Content",
    "type": "blockContent",
    "settings": [
        {
          "type": "select",
          "id": "flipped_area",
          "label": "Flipped",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "flipped",
              "label": "Flipped"
            }
          ],
          "default": "none"
        },
       {
          "type": "select",
          "id": "flex_basis",
          "label": "Grid System",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "half_column",
              "label": "Half Column"
            },
            {
              "value": "one_third",
              "label": "One Third"
            },
             {
              "value": "one_fourth",
              "label": "One Fourth"
            }
          ],
          "default": "none"
        },
      {
        "type": "text",
        "id": "title",
        "label": "Block Title"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Block Content"
      },
      {
        "type": "image_picker",
        "id": "column_image",
        "label": "Column Image"
      },
      {
        "type": "textarea",
        "id": "sub_title",
        "label": "Sub Title"
      },
      {
        "type": "textarea",
        "id": "sub_content",
        "label": "Sub Content"
      },
      {
        "type": "textarea",
        "id": "sub_sec_title",
        "label": "Sub Sec Title"
      },
      {
        "type": "textarea",
        "id": "sub_sec_content",
        "label": "Html Content"
      },
      {
        "type": "textarea",
        "id": "sub_third_title",
        "label": "Sub Third Title"
      },
      {
        "type": "textarea",
        "id": "sub_third_content",
        "label": "Html Content"
      }
    ]
  }
],
    "presets": [
      {
        "name": "Two Column",
        "category": "Custom"
      }
    ]
  }
{% endschema %}
{% stylesheet %}
{% endstylesheet %}
{% javascript %}
{% endjavascript %}
